<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.view (in stock_procurement_calendar)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_procurement_calendars" type="object"
                        class="oe_stat_button" icon="fa-clock-o"
                        attrs="{'invisible': [('procurement_calendar_count', '=', 0)]}">
                    <div class="o_form_field o_stat_info">
                        <span attrs="{'invisible':[('procurement_calendar_count', '=', 0)]}" class="o_stat_value">
                            <field name="procurement_calendar_count" widget="statinfo" nolabel="1"/>
                        </span>
                        <span class="o_stat_text">Attendances</span>
                    </div>
                </button>
            </div>
        </field>
    </record>
</odoo>
