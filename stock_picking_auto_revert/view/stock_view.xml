<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_cancel_form" model="ir.ui.view">
        <field name="name">stock.picking.cancel.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <button name="action_revert_recreate" string="Return and recreate"
                    states="done" type="object" icon="fa-ban"
                    confirm="Are you sure you want to return a recreate this picking?"/>
            </field>
        </field>
    </record>

</odoo>
