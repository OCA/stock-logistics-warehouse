<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_shelf_life" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.shelf.life</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='production_lot_info']" position="inside">

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="minimum_shelf_life"/>
                        <div class="text-muted">
                            0 to deactivate
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="minimum_shelf_life" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
