<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Add the quantity available in the sale order form -->
        <record id="view_product_form_immediately_available_qty" model="ir.ui.view">
            <field name="name">Immediately usable quantity on sale order form</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath
                        expr="//field[@name='order_line']//form//field[@name='product_uom_qty']"
                        position="after">
                        <field name="immediately_usable_qty" attrs="{'invisible': [('state',' not in',('draft','exception'))]}"/>
                    </xpath>
                    <xpath
                        expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']"
                        position="after">
                        <field name="immediately_usable_qty" attrs="{'invisible': [('state','not in',('draft','exception'))]}"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
