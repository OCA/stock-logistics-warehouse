<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">put_in_pack_nbr</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='move_line_ids_without_package']/../button[@name='put_in_pack']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page/field[@name='move_line_ids_without_package']/../button[@name='put_in_pack']" position="before">
                <button
                    class="oe_highlight"
                    name="put_in_pack_nbr" type="object"
                    string="Put in Pack"
                    attrs="{'invisible': [('state', 'in', ('draft', 'done', 'cancel'))]}"
                    groups="stock.group_tracking_lot"
                    />
            </xpath>

            <xpath expr="//page/field[@name='move_ids_without_package']/../button[@name='put_in_pack']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page/field[@name='move_ids_without_package']/../button[@name='put_in_pack']" position="before">
                <button
                    class="oe_highlight"
                    name="put_in_pack_nbr" type="object"
                    string="Put in Pack"
                    attrs="{'invisible': [('state', 'in', ('draft', 'done', 'cancel'))]}"
                    groups="stock.group_tracking_lot"
                    />
            </xpath>
        </field>
    </record>

</odoo>
