<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_company_form" >
            <field name="name">view.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="procurement.mrp_company"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='logistics_grp']" position="inside">
                    <field name="create_orderpoints" />
                    <field name="orderpoint_product_max_qty" attrs="{'invisible': [('create_orderpoints', '=', False)]}" />
                    <field name="orderpoint_product_min_qty" attrs="{'invisible': [('create_orderpoints', '=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
