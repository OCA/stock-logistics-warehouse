    <record id="ir_rule_stock_location_allowed_warehouse" model="ir.rule">
        <field name="name">Stock locations from allowed Warehouse</field>
        <field name="model_id" ref="stock.model_stock_location" />
        <field
            name="domain_force"
        >['|',('warehouse_id', '=', False), '|', ('warehouse_id', 'in', user.warehouse_ids.ids), (1 if user.warehouse_ids.ids == [] else 0, "=", 1)]</field>
        <field eval="1" name="perm_unlink" />
        <field eval="1" name="perm_write" />
        <field eval="1" name="perm_read" />
        <field eval="1" name="perm_create" />
    </record>


