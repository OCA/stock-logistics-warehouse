<odoo>

    <record id="view_inventory_form" model="ir.ui.view">
        <field name="name">Inventory form view - discrepancy extension </field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_done']"
                   position="after">
                <button name="action_request_verification"
                        string="Request Verification" type="object"
                        class="oe_highlight"
                        attrs="{'invisible': ['|',('state', '!=', 'confirm'),('requested_verification', '=', True)]}"/>
            </xpath>
            <field name="name" position="after">
                <field name="requested_verification" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
