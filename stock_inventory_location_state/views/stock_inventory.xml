<odoo>
    <record id="view_inventory_form" model="ir.ui.view">
        <field
            name="name"
        >Inventory form view - stock_inventory_location_state extension</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form" />
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box">
                <button
                    name="action_open_inventory_locations"
                    states="confirm"
                    type="object"
                    groups="stock.group_stock_user"
                    icon="fa-list"
                    class="oe_stat_button"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field
                                name="remaining_location_count"
                                widget="statinfo"
                                nolabel="1"
                                class="mr4"
                            /> / <field
                                name="location_count"
                                widget="statinfo"
                                nolabel="1"
                            />
                        </span>
                        <span class="o_stat_text">Locations</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <record id="view_stock_inventory_location_search" model="ir.ui.view">
        <field name="name">stock.inventory.location.search</field>
        <field name="model">stock.inventory.location</field>
        <field name="arch" type="xml">
            <search string="Inventory Location">
                <field name="location_id" />
                <field name="state" />
            </search>
        </field>
    </record>
    <record id="view_stock_inventory_location_tree" model="ir.ui.view">
        <field name="name">stock.inventory.location.tree</field>
        <field name="model">stock.inventory.location</field>
        <field name="arch" type="xml">
            <tree string="Inventory Location">
                <field name="location_id" />
                <field name="state" />
                <button
                    type="object"
                    name="action_start"
                    string="Start"
                    states="pending"
                />
                <button
                    type="object"
                    name="action_done"
                    string="Done"
                    states="started"
                />
            </tree>
        </field>
    </record>

</odoo>
