<odoo>
    <record id="view_inventory_form" model="ir.ui.view">
        <field
            name="name"
        >Inventory form view - stock_inventory_location_state extension</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form" />
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box">
                <button
                    name="action_open_inventory_locations"
                    states="confirm,done"
                    type="object"
                    groups="stock.group_stock_user"
                    icon="fa-list"
                    class="oe_stat_button"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field
                                name="remaining_location_count"
                                widget="statinfo"
                                nolabel="1"
                                class="mr4"
                            /> / <field
                                name="location_count"
                                widget="statinfo"
                                nolabel="1"
                            />
                        </span>
                        <span class="o_stat_text">Locations</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <record id="view_stock_inventory_location_search" model="ir.ui.view">
        <field name="name">stock.inventory.location.search</field>
        <field name="model">stock.inventory.location</field>
        <field name="arch" type="xml">
            <search>
                <field name="location_id" />
                <separator />
                <filter
                    name="pending"
                    string="Pending"
                    domain="[('state', '=', 'pending')]"
                />
                <filter
                    name="started"
                    string="Started"
                    domain="[('state', '=', 'started')]"
                />
                <filter name="done" string="Done" domain="[('state', '=', 'done')]" />
                <group name="groupby">
                    <filter
                        name="state_groupby"
                        string="State"
                        context="{'group_by': 'state'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="view_stock_inventory_location_tree" model="ir.ui.view">
        <field name="name">stock.inventory.location.tree</field>
        <field name="model">stock.inventory.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="inventory_id" />
                <field name="location_id" />
                <button
                    type="object"
                    name="action_open_inventory_lines"
                    string="Inventory Lines"
                    states="started,done"
                    icon="fa-eye"
                />
                <button
                    type="object"
                    name="action_start"
                    string="Start"
                    states="pending"
                    icon="fa-play"
                />
                <button
                    type="object"
                    name="action_done"
                    string="Done"
                    states="started"
                    icon="fa-check"
                />
                <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'pending'"
                    decoration-warning="state == 'started'"
                    decoration-success="state == 'done'"
                />
            </tree>
        </field>
    </record>

</odoo>
