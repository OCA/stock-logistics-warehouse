<odoo>
    <record id="view_category_property_form_stock_sivm" model="ir.ui.view">
        <field name="name">product.category.stock.property.form.inherit.stock</field>
        <field name="model">product.category</field>
        <field
            name="inherit_id"
            ref="stock_account.view_category_property_form_stock"
        />
        <field name="arch" type="xml">
            <field name="property_valuation" position="after">
                <field
                    name="property_specific_ident_cost"
                    attrs="{'invisible':[('property_cost_method', '!=', 'fifo')]}"
                    groups="account.group_account_readonly,stock.group_stock_manager"
                />
            </field>
        </field>
    </record>
</odoo>
