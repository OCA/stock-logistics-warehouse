<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="stock_inventory_form">
            <field name="name">stock.inventory.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form" />
            <field name="arch" type="xml">
                <data>
                    <notebook position="attributes">
                        <attribute name="attrs" />
                    </notebook>
                    <xpath expr="//button[@name='reset_real_qty']/parent::page" position="attributes">
                        <attribute name="attrs">{'invisible':[('state','=','draft')]}</attribute>
                    </xpath>
                    <notebook position="before">
                        <group>
                            <field name="categ_ids"
                                   nolabel="1"
                                   attrs="{'invisible':[('filter','!=','categories')], 'readonly':[('state', '!=', 'draft')]}" />
                            <field name="product_ids"
                                   nolabel="1"
                                   attrs="{'invisible':[('filter','!=','products')], 'readonly':[('state', '!=', 'draft')]}" />
                            <field name="lot_ids"
                                   nolabel="1"
                                   attrs="{'invisible':[('filter','!=','lots')], 'readonly':[('state', '!=', 'draft')]}" />
                        </group>
                    </notebook>
                    <notebook position="inside">
                        <page string="Capture Lines"
                            attrs="{'invisible':[('filter','!=','empty')]}">
                            <field name="empty_line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="product_code"/>
                                    <field name="product_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </data>
            </field>
        </record>

    </data>
</openerp>
