<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_move_operations" model="ir.ui.view">
        <field name="name">stock.move.operations.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations" />
        <field name="arch" type="xml">
            <field name="reserved_availability" position="after">
                <field name="reserve_area_line_ids" invisible="1" />
                <field
                    name="area_reserved_availability"
                    attrs="{'invisible': [('reserve_area_line_ids', '=', [])]}"
                />
            </field>
        </field>
    </record>
    <record id="view_move_reserve_area_form" model="ir.ui.view">
        <field name="name">stock.move.operations.reserve.area.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form" />
        <field name="arch" type="xml">
            <group name="linked_group" position="after">
                <group name="reserve_area_lines" string="Area Reservations">
                    <field name="reserve_area_line_ids" readonly="1">
                        <tree>
                            <field name="reserve_area_id" />
                            <field name="reserved_availability" />
                            <field name="product_id" />
                        </tree>
                    </field>
                </group>
            </group>
        </field>
    </record>

    <record id="show_reserved_area_move_tree" model="ir.ui.view">
            <field name="name">reserve.area.stock.picking.move.tree</field>
            <field name="model">stock.move</field>
            <field name="arch" type="xml">
                <tree string="Stock Moves" delete="0" create="0">
                    <field name="company_id" invisible="1" />
                    <field name="date" invisible="1" />
                    <field name="state" invisible="1" readonly="0" />
                    <field name="picking_type_id" invisible="1" />
                    <field name="location_dest_id" invisible="1" />
                    <field name="scrapped" invisible="1" />
                    <field name="picking_code" invisible="1" />
                    <field name="product_type" invisible="1" />
                    <field name="show_details_visible" invisible="1" />
                    <field name="show_reserved_availability" invisible="1" />
                    <field name="show_operations" invisible="1" readonly="1" />
                    <field name="additional" invisible="1" />
                    <field name="has_move_lines" invisible="1" />
                    <field name="is_locked" invisible="1" />
                    <field name="product_uom_category_id" invisible="1" />
                    <field name="product_id" required="1" />
                    <field name="is_initial_demand_editable" invisible="1" />
                    <field name="is_quantity_done_editable" invisible="1" />
                    <field name="reserve_area_line_ids" invisible="1" />
                    <field name="picking_id" />
                    <field name="location_id" />
                    <field
                    name="product_uom_qty"
                    string="Demand"
                    attrs="{'readonly': [('is_initial_demand_editable', '=', False)]}"
                />
                    <field name="reserved_availability" string="Reserved" />
                    <field
                    name="area_reserved_availability"
                    attrs="{'invisible': [('reserve_area_line_ids', '=', [])]}"
                />
                    <field name="quantity_done" string="Done" />
                    <field
                    name="product_uom"
                    string="Unit of Measure"
                    groups="uom.group_uom"
                />
                </tree>
            </field>
        </record>

</odoo>
