<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="view_reserve_area_form" model="ir.ui.view">
            <field name="name">stock.reserve.area</field>
            <field name="model">stock.reserve.area</field>
            <field name="arch" type="xml">
                <form string="Reserve Area">
                    <sheet>
                    <div name="button_box" class="oe_button_box" position="inside">
                        <button
                            name="action_open_reserved_moves"
                            type="object"
                            icon="fa-list"
                            class="oe_stat_button"
                        ><span>
                                Reserved Moves
                            </span>
                        </button>
                    </div>
                        <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                        <label for="name" class="oe_edit_only" />
                        <h1><field name="name" /></h1>
                        <group>
                            <group>
                                <field name="active" invisible="1" />
                            </group>
                            <group>
                                <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_create': True}"
                            />
                            </group>
                            <group>
                                <field name="location_ids" widget="many2many">
                                </field>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_reserve_area_tree" model="ir.ui.view">
            <field name="name">stock.reserve.area.tree</field>
            <field name="model">stock.reserve.area</field>
            <field name="arch" type="xml">
                <tree string="Reserve Area">
                    <field name="name" />
                    <field name="active" invisible="1" />
                    <field name="company_id" groups="base.group_multi_company" />
                </tree>
            </field>
        </record>

        <record id="stock_reserve_area_view_search" model="ir.ui.view">
            <field name="name">stock.reserve.area.search</field>
            <field name="model">stock.reserve.area</field>
            <field name="arch" type="xml">
                <search string="reserve Area">
                    <field name="name" />
                    <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
                </search>
            </field>
        </record>

        <record id="action_reserve_area_form" model="ir.actions.act_window">
            <field name="name">Reserve Areas</field>
            <field name="res_model">stock.reserve.area</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="view_reserve_area_tree" />
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Define a new Reserve Area
              </p>
            </field>
        </record>

        <menuitem
        action="action_reserve_area_form"
        id="menu_action_reserve_area_form"
        parent="stock.menu_warehouse_config"
        sequence="100"
    />

    <record id="move_reserve_area_line_tree" model="ir.ui.view">
            <field name="name">move.reserve.area.line.tree</field>
            <field name="model">stock.move.reserve.area.line</field>
            <field name="arch" type="xml">
                <tree string="Area Reservations" delete="0" create="0">
                    <field name="reserve_area_id" />
                    <field name="picking_id" string="Picking" />
                    <field name="move_id" />
                    <field name="reserved_availability" />
                    <field name="product_id" />
                </tree>
            </field>
    </record>

    <record id="move_reserve_area_line_search" model="ir.ui.view">
        <field name="name">move.reserve.area.line.search</field>
        <field name="model">stock.move.reserve.area.line</field>
        <field name="arch" type="xml">
            <search string="Product">
                 <field name="product_id" />
                 <filter
                    string="Product"
                    name="product_id"
                    context="{'group_by':'product_id'}"
                />
            </search>
        </field>
    </record>
</odoo>
