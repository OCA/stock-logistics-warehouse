<?xml version="1.0"?>
<openerp>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <button name="%(stock.action_location_form)d"
                    position="after">
                <group>

                    <div class="text-muted">
                        <label for="default_customer_location"/>
                    </div>
                    <field name="default_customer_location" nolabel="1"/>
                    <div class="text-muted">
                        <label for="default_supplier_location"/>
                    </div>
                    <field name="default_supplier_location" nolabel="1"/>
                </group>
            </button>
        </field>
    </record>

</openerp>
