<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_order_form" model="ir.ui.view">
            <field
                name="name"
            >Sale Order - Default is Company for Partner if created from Purchase view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute
                        name="context"
                    >{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'default_is_company': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
