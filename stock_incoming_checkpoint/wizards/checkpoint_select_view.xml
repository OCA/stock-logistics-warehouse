<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

<record id="incoming_checkpoint_form" model="ir.ui.view">
    <field name="model">incoming.checkpoint.selection.wizard</field>
    <field name="arch" type="xml">
        <form>
            <p class="oe_grey">Fill this form to be redirected to goods to receive
            </p>
            <group>
                <field name="purchase_ids" widget="many2many_tags"  options="{'no_create': True}" 
                       domain="[('state', 'not in', ('draft', 'sent', 'bid', 'confirmed', 'cancel'))]"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="today"/>
                <field name="debug" goups="base.group_no_one"/>
            </group>
            <group>
                <div>
                    Extracted stock moves
                </div>
            </group>
            <footer>
                <button name="ui_select_moves" string="Confirm" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>


<record id="incoming_checkpoint_wiz_act" model="ir.actions.act_window">
    <field name="name">Incoming Checkpoint</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">incoming.checkpoint.selection.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>


<menuitem id="incoming_checkpoint_selection_wizard_menu" 
          action="incoming_checkpoint_wiz_act" 
          parent="stock.menu_stock_warehouse_mgmt" sequence="20"/>


</data>
</openerp>
