<odoo>

    <record id="cost_adjustment_detail_view_form" model="ir.ui.view">
        <field name="name">stock.cost.adjustment.detail.form</field>
        <field name="model">stock.cost.adjustment</field>
        <field
            name="inherit_id"
            ref="stock_inventory_revaluation_adjustment.cost_adjustment_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="action_compute_impact"
                    type="object"
                    string="Compute Impact"
                    class="oe_highlight"
                    groups="stock.group_stock_user"
                    states="draft,confirm"
                />
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button
                    name="action_open_cost_adjustment_details"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-bars"
                    string="BoM Details"
                />
            </xpath>
        </field>
    </record>

</odoo>
