<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_common_form_lock_inherit" model="ir.ui.view">
        <field name="name">product.template.common.lock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="allow_lock_cost" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="attrs">
                    {'readonly':[('allow_lock_cost','=',True)]}
                </attribute>
            </xpath>
        </field>
    </record>
    <record id="product_product_common_form_mrp_inherit" model="ir.ui.view">
        <field name="name">product.product.common.mrp</field>
        <field name="model">product.product</field>
        <field
            name="inherit_id"
            ref="mrp_account.product_product_view_form_normal_inherit_extended"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='proposed_price_div']" position="after">
                <field name="proposed_cost_ignore_bom" invisible="1"/>
            </xpath>
            <field name="proposed_cost" position="after">
                <button name="calculate_proposed_cost"
                        string="Calculate Proposed Cost" type="object"
                        attrs="{'invisible': ['|', ('bom_count', '=', 0), ('proposed_cost_ignore_bom', '=', True)]}"
                        help="Calculate Proposed Cost."
                        class="oe_link oe_read_only pt-0"/>
            </field>

            <field name="valuation" position="after">
                <field name="allow_lock_cost" invisible="1" />
            </field>
            <button name="button_bom_cost" position="attributes">
                <attribute
                    name="attrs">{'invisible': True}</attribute>
            </button>
        </field>
    </record>

    <record id="product_template_common_form_mrp_inherit" model="ir.ui.view">
        <field name="name">product.template.common.mrp.inherit</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="mrp_account.product_product_ext_form_view2"
        />
        <field name="arch" type="xml">
            <button name="button_bom_cost" position="attributes">
                <attribute
                    name="attrs">{'invisible': True}</attribute>
            </button>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_form_view_proposed_cost_inherit">
        <field name="name">product.template.form.proposed.cost.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase_request.product_template_form_view_inherit" />
        <field name="arch" type="xml">
            <field name="purchase_request" position="before">
                <field name="proposed_cost_ignore_bom" />
            </field>
        </field>
    </record>

    <record id="proposed_cost_product_search_form_view" model="ir.ui.view">
        <field name="name">proposed.cost.product.search.stock.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="after">
                <separator/>
                <filter name="has_proposed_cost" string="Has Proposed Cost" domain="[('proposed_cost','&gt;',0)]"/>
            </xpath>
        </field>
    </record>

    <!-- <delete model="ir.actions.server" id="mrp_account.action_compute_price_bom_product"/>
    <delete model="ir.actions.server" id="mrp_account.action_compute_price_bom_template"/> -->

</odoo>
