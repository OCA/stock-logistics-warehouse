<odoo>
    <record id="cost_adjustment_mrp_report" model="ir.actions.report">
        <field name="name">Manufacturing Report</field>
        <field name="model">stock.cost.adjustment.line</field>
        <field name="report_type">qweb-pdf</field>
        <field
            name="report_name"
        >product_cost_adjustment_mrp.report_cost_adjustment_mrp</field>
        <field name="binding_model_id" ref="model_stock_cost_adjustment_line" />
    </record>

    <template id="report_cost_adjustment_mrp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h1>Cost Adjustment Manufacturing Report</h1>
                    <br />
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th><strong>Product</strong></th>
                                <th><strong>Manufacturing Orders</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td><span t-field="line.product_id" /></td>
                                    <td>
                                        <t
                                            t-foreach="line.mrp_production_ids"
                                            t-as="mo"
                                        >
                                            <span t-field="mo.name" />,
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
