<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Proposal purchase -->
        <record id="wizard_create_purchase" model="ir.ui.view">
            <field name="name">Create RFQ</field>
            <field name="model">purchase.purchase_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create proposal purchase">
                    <group col="2" colspan="2">
                        <field name="product"/>
                        <field name="name"/>
                        <field name="stock_period_min"/>
                    </group>
                    <group col="4" colspan="1">
                        <field name="ultimate_purchase" readonly="1"/>
                    </group>
                    <group col="2" colspan="2">
                        <!-- filter by only the suppliers for this product -->
                        <separator string="Select supplier" colspan="2"/>
                        <field name="supplier" domain="[('product_tmpl_id' , '=', product)]"/>
                        <field name="ultimate_purchase_to" />
                    </group>
                    <footer>
                        <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        <button name="create_rfq" string="Create RFQ"
                            type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_create_purchase_act"
            model="ir.actions.act_window" >
            <field name="type">ir.actions.act_window</field>
            <field name="name">Create RFQ for product</field>
            <field name="view_type">form</field>
            <field name="res_model">purchase.purchase_wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_create_purchase"/>
            <field name ="target">new</field>
        </record>

    </data>
</openerp>
