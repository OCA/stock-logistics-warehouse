<odoo>
    <record id="product_template_only_form_view_orr" model="ir.ui.view">
        <field name="name">product.template.only.form.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//notebook/page[@name='inventory']/group[@name='inventory']"
                position="after"
                attrs="{'invisible': [('type', '!=', 'product')]}"
            >
                <group name="cycle_count" string="Cycle Count">
                    <group>
                        <field
                            name="abc_id"
                            attrs="{'required': [('type', '=', 'product')]}"
                        />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_orr" model="ir.ui.view">
        <field name="name">product.template.tree.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view" />
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="abc_id" optional="hide" />
            </field>
        </field>
    </record>
</odoo>
