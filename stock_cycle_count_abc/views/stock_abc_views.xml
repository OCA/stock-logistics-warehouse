<odoo>
    <record id="stock_abc_view" model="ir.ui.view">
        <field name="name">stock.abc.tree.view</field>
        <field name="model">stock.abc</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" required="1" />
                <field name="count" required="1" />
                <field name="product_ids" />
            </tree>
        </field>
    </record>
    <record id="action_stock_abc" model="ir.actions.act_window">
        <field name="name">Inventory Groups</field>
        <field name="res_model">stock.abc</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem
        id="menu_stock_abc"
        name="Inventory Groups"
        parent="stock.menu_stock_config_settings"
        action="action_stock_abc"
    />
</odoo>
