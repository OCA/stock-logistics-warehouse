<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record model="ir.ui.view" id="mrp_production_form_view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <button name="action_show_details" position="before">
                <button
                    name="%(stock_quant_manual_assign.assign_manual_quants_action)d"
                    type="action"
                    icon="fa-tags"
                    title="Manual Quants"
                    options='{"warn": true}'
                    attrs="{'invisible': ['|', ('show_details_visible', '=', False), ('parent.state', '=', 'draft')],
                                                'column_invisible': [('parent.show_lot_ids', '=',  False)]}"
                />
            </button>
        </field>
    </record>
</odoo>
