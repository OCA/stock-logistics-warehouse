<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.stock_warehouse_calendar_orderpoint</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div name="warehouse_setting_container" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    title="Reordering schedule"
                    name="schedule_orderpoints_setting_container"
                >
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="orderpoint_calendar_id" />
                        <div class="text-muted">
                          Calendar used to compute the lead date of reordering rules.<br
                            />
                          These parameters are global and can be overriden on each of the warehouses.
                        </div>
                        <field name="orderpoint_calendar_id" class="oe_inline" />
                    </div>
                    <div
                        class="o_setting_left_pane"
                        attrs="{'invisible': [('orderpoint_calendar_id', '=', False)]}"
                    >
                        <field name="orderpoint_on_workday" />
                    </div>
                    <div
                        class="o_setting_right_pane"
                        attrs="{'invisible': [('orderpoint_calendar_id', '=', False)]}"
                    >
                        <label for="orderpoint_on_workday" />
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
