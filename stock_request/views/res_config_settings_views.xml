<odoo>

    <record id="res_config_setings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock_request</field>
        <field name="model">stock.config.settings</field>
        <field name="inherit_id" ref="stock.view_stock_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='traceability']" position="before">
                <group class="app_settings_block" string="Stock Requests"
                     data-string="Stock Request" data-key="stock_request"
                     groups="stock_request.group_stock_request_manager">
                    <div class="row mt8 o_settings_container" id="stock_request">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_stock_request_order"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Enable Orders"
                                       for="group_stock_request_order"/>
                                <div class="text-muted">
                                    Activates Stock Request Orders
                                </div>
                            </div>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
