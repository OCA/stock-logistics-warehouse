<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_proposed_price_inherit" model="ir.ui.view">
        <field name="name">product.template.proposed.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <div name="standard_price_uom" position="after">
                <field
                    string="Bill of Materials"
                    name="bom_count"
                    invisible="1"
                    widget="statinfo"
                />
                <label
                    for="proposed_cost"
                    groups="base.group_user"
                    attrs="{'invisible': ['|',('bom_count','&gt;',0),'&amp;',('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"
                />
                <div
                    name="proposed_price_div"
                    groups="base.group_user"
                    attrs="{'invisible': ['|',('bom_count','&gt;',0),'&amp;',('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"
                    class="o_row"
                >
                    <field
                        name="proposed_cost"
                        widget="monetary"
                        options="{'currency_field': 'cost_currency_id', 'field_digits': True}"
                    />
                    <span groups="uom.group_uom" class="oe_read_only">per
                        <field name="uom_name" />
                    </span>
                </div>
            </div>
        </field>
    </record>

</odoo>
