<odoo>

    <record id="cost_adjustment_view_tree" model="ir.ui.view">
        <field name="name">stock.cost.adjustment.tree</field>
        <field name="model">stock.cost.adjustment</field>
        <field name="arch" type="xml">
            <tree string="Cost Adjustment" sample="1">
                <field name="date" />
                <field name="name" />
                <field name="type_id" />
                <field name="product_ids" widget="many2many_tags" optional="hide" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="show"
                />
                <field
                    name="state"
                    widget="badge"
                    decoration-success="state in ('done', 'posted')"
                    decoration-info="state in ('draft', 'confirm')"
                />
            </tree>
        </field>
    </record>

    <record id="cost_adjustment_view_kanban" model="ir.ui.view">
        <field name="name">stock.cost.adjustment.kanban</field>
        <field name="model">stock.cost.adjustment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name" />
                <field name="date" />
                <field name="type_id" />
                <field name="state" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span>
                                            <t t-esc="record.name.value" />
                                        </span>
                                    </strong>
                                </div>
                                <field
                                    name="state"
                                    widget="label_selection"
                                    options="{'classes': {'draft': 'info', 'cancel': 'default', 'confirm': 'success', 'done': 'success'}}"
                                />
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="date" widget="date" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="cost_adjustment_view_form" model="ir.ui.view">
        <field name="name">stock.cost.adjustment.form</field>
        <field name="model">stock.cost.adjustment</field>
        <field name="arch" type="xml">
            <form string="Cost Adjustment">
            <header>
                <button
                        name="action_start"
                        id="action_start"
                        states="draft"
                        string="Start Adjustment"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('product_ids', '=', False)]}"
                    />
                <button
                        name="action_validate"
                        string="Validate"
                        type="object"
                        class="oe_highlight"
                        states="confirm"
                        groups="stock.group_stock_manager"
                    />
                <button
                        name="action_post"
                        string="Post"
                        type="object"
                        states="done"
                        class="oe_highlight"
                        groups="stock.group_stock_manager"
                        context="{'cost_adjustment_type_id': type_id}"
                    /><!-- TODO: remove context key? -->

                <button
                        name="action_start"
                        id="action_start_recompute"
                        states="confirm"
                        string="Recompute Impact"
                        type="object"
                        attrs="{'invisible': ['|', ('state', 'not in', ['confirm']), ('product_ids', '=', False)]}"
                    />
                <button
                        name="action_open_cost_adjustment_lines"
                        states="confirm,done,posted"
                        string="View Adjustment"
                        type="object"
                    />
                <button
                        name="action_reload"
                        states="computing"
                        string="Reload"
                        type="object"
                        class="oe_highlight"
                    />
                <button
                        name="action_draft"
                        string="Set to Draft"
                        type="object"
                        states="cancel,confirm,computing,done"
                    />
                <button
                        name="action_cancel"
                        states="draft"
                        string="Cancel"
                        type="object"
                        confirm="If you cancel this cost adjustment, all its cost adjustment lines will be lost. Are you sure you want to discard it?"
                    />
                <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirm,done"
                    />
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box">
                </div>
                <field name="line_ids" invisible="1" />
                <div class="oe_title">
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" placeholder="e.g. Monthly Cost Adjustment" />
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="type_id" options="{'no_create': True}" />
                    </group>
                    <group>
                        <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_create': True}"
                            />
                    </group>
                </group>
                <div>
                    <group string="Products">
                        <field
                                name="product_ids"
                                nolabel="1"
                                context="{'search_default_has_proposed_cost':1}"
                            >
                            <tree create="false" editable="bottom">
                                <field name="name" />
                                <field name="proposed_cost" />
                                <field name="standard_price" readonly="1" />
                            </tree>
                        </field>
                    </group>
                </div>
            </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="cost_adjustment_view_search" model="ir.ui.view">
        <field name="name">stock.cost.adjustment.search</field>
        <field name="model">stock.cost.adjustment</field>
        <field name="arch" type="xml">
            <search string="Search Cost Adjustment">
                <field name="name" string="Reference" />
                <field name="type_id" />
                <field
                    name="product_ids"
                    string="Product"
                    filter_domain="['|', ('product_ids', 'ilike', self), ('line_ids.product_id','ilike',self)]"
                />
                <filter
                    string="Draft"
                    name="draft"
                    domain="[('state', '=', 'draft')]"
                />
                <filter
                    string="In Progress"
                    name="confirm"
                    domain="[('state', '=', 'confirm')]"
                />
                <filter
                    string="Validated"
                    name="done"
                    domain="[('state', '=', 'done')]"
                />
                <separator />
                <filter string="Cost Adjustmnet Date" name="date" date="date" />
                <group expand="0" string="Group By">
                    <filter
                        string="Status"
                        name="groupby_status"
                        domain="[]"
                        context="{'group_by': 'state'}"
                    />
                    <filter
                        string="Cost Adjustment Date"
                        name="groupby_cost_adjustments_month"
                        domain="[]"
                        context="{'group_by': 'date'}"
                        help="Cost Adjustments by Date"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="action_cost_adjustment" model="ir.actions.act_window">
        <field name="name">Cost Adjustments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.cost.adjustment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="cost_adjustment_view_tree" />
        <field name="search_view_id" ref="cost_adjustment_view_search" />
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new Product Cost Adjustment
        </p>
        </field>
    </record>

    <menuitem
        id="menu_action_cost_adjustment"
        action="action_cost_adjustment"
        parent="stock.menu_stock_warehouse_mgmt"
        sequence="31"
    />

</odoo>
