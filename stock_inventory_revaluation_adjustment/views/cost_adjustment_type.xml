<odoo>

    <record id="cost_adjustment_type_view_tree" model="ir.ui.view">
        <field name="name">cost.adjustment.type.tree</field>
        <field name="model">cost.adjustment.type</field>
        <field name="arch" type="xml">
            <tree string="Cost Adjustment Type" sample="1">
                <field name="name" />
                <field name="account_id" optional="hide" />
                <field name="active" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="cost_adjustment_type_view_form" model="ir.ui.view">
        <field name="name">cost.adjustment.type.form</field>
        <field name="model">cost.adjustment.type</field>
        <field name="arch" type="xml">
            <form string="Cost Adjustment Type">
            <sheet>
                <field name="active" invisible="1" />
                <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                <div class="oe_title">
                    <label for="name" class="oe_edit_only" />
                    <h1>
                        <field name="name" placeholder="e.g. Monthly Cost Adjustment" />
                    </h1>
                </div>
                <group>
                    <field name="account_id" options="{'no_create': True}" />
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="cost_adjustment_type_view_search" model="ir.ui.view">
        <field name="name">cost.adjustment.type.search</field>
        <field name="model">cost.adjustment.type</field>
        <field name="arch" type="xml">
            <search string="Search Cost Adjustment">
                <field name="name" />
                <field name="account_id" />
            </search>
        </field>
    </record>


    <record id="action_cost_adjustment_type" model="ir.actions.act_window">
        <field name="name">Cost Adjustment Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cost.adjustment.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="cost_adjustment_type_view_tree" />
        <field name="search_view_id" ref="cost_adjustment_type_view_search" />
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new Product Cost Adjustment Type
        </p>
        </field>
    </record>

    <menuitem
        id="menu_action_cost_adjustment_type"
        action="action_cost_adjustment_type"
        parent="stock.menu_product_in_config_stock"
        sequence="10"
    />

</odoo>
