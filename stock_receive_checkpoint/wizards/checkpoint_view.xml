<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

<record id="reception_checkpoint_form" model="ir.ui.view">
    <field name="model">reception.checkpoint.wizard</field>
    <field name="arch" type="xml">
        <form>
            <p class="oe_grey">Fill this form to be redirected to goods to receive
            </p>
            <group>
                <field name="purchase_ids" widget="many2many_tags" 
                       domain="[('state', 'not in', ('draft', 'sent', 'bid', 'confirmed', 'done', 'cancel'))]"/>
                <field name="partner_id"/>
                <field name="date"/>
            </group>
            <footer>
                <button name="button_select_moves" string="Confirm" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>


<record id="reception_checkpoint_wiz_act" model="ir.actions.act_window">
    <field name="name">Reception Checkpoint</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">reception.checkpoint.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>


<menuitem id="reception_checkpoint_wizard_menu" action="reception_checkpoint_wiz_act" 
          parent="stock.menu_stock_warehouse_mgmt" sequence="20"/>


</data>
</openerp>
